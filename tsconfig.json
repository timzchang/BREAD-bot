{
  "include": ["env.d.ts", "**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "outDir": "build/",
    "rootDir": "src"
  }
}
